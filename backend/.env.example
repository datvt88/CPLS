# MongoDB Configuration
# MongoDB Atlas connection string (Free M0 tier - 512MB limit)
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority

# Database name
MONGODB_DATABASE=cpls_trading

# Server Configuration
# Port for the application (Cloud Run will set this automatically)
PORT=8080

# Cloud Run Configuration
# Set to production when deploying to Cloud Run
ENV=development

# Session Configuration
# IMPORTANT: Set a strong random secret for production
# Generate with: openssl rand -base64 32
SESSION_SECRET=your-secret-key-change-in-production

# Admin Credentials
# Change these values in production for security
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
