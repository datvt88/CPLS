# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key

# Firebase Realtime Database for Golden Cross Signals
FIREBASE_URL=https://your-project-golden-cross.firebaseio.com
FIREBASE_SECRET=your_firebase_secret_or_service_account_key
NEXT_PUBLIC_FIREBASE_URL=https://your-project-golden-cross.firebaseio.com

# Zalo Configuration (Optional)
ZNS_ACCESS_TOKEN=your_zns_access_token
ZNS_TEMPLATE_ID=your_zns_template_id
NEXT_PUBLIC_ZALO_APP_ID=your_zalo_app_id
ZALO_APP_SECRET=your_zalo_app_secret

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Signal API Configuration (CPLS Backend)
# Server-side only (more secure, recommended)
SIGNAL_API_URL=https://your-cloudrun-service.asia-southeast1.run.app
# Or use public version (exposed to client)
# NEXT_PUBLIC_API_URL=https://your-cloudrun-service.asia-southeast1.run.app

# Cache revalidation interval in seconds (default: 60)
NEXT_PUBLIC_REVALIDATE_INTERVAL=60
